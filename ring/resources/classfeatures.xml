<ring>
	<classfeature name="rage" type="active" target="self">
		<command>rage</command>
		<help>Rage is a class feature of the barbarian that increases strength and constitution!</help>
		<text>You fly into a [B][RED]bloodthirsty rage![R][WHITE]</text>
		
		<effect duration="timed" timer="10" level="1">
			<efc class="ACChange">
				<param name="amount" value="-2" />
			</efc>
			
			<efc class="StatChange">
				<param name="strength" value="2" />
			</efc>
			
			<efc class="HPChange">
				<param name="amount" value="10" />
			</efc>
		</effect>
	
	</classfeature>
</ring>